<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    android:paddingBottom="100dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="1dp"
        android:paddingLeft="1dp"


       >


        <LinearLayout
            android:id="@+id/imgsLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <androidx.cardview.widget.CardView

                android:layout_width="wrap_content"
                android:layout_height="155dp"
                app:cardCornerRadius="18dp"

                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/editProfileIm"
                    android:layout_width="159dp"
                    android:layout_height="159dp"
                    android:background="@drawable/userphoto"

                    android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="125dp"
                app:cardCornerRadius="18dp"
                >
            <ImageView
                android:id="@+id/editBkgIm"
                android:layout_width="159dp"
                android:layout_height="130dp"
                android:scaleType="centerCrop"
                android:background="@drawable/plyash"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <EditText
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:padding="5dp"
            android:layout_below="@id/imgsLayout"
            android:layout_marginTop="-25dp"
            android:layout_marginLeft="159dp"
            android:maxLines="1"
            android:maxLength="25"
            android:background="@drawable/edit_text_rounder_corner"
            android:hint="Username"/>
        <EditText
            android:id="@+id/bio"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:maxLength="100"
            android:layout_below="@id/username"
            android:background="@drawable/edit_text_rounder_corner"
            android:hint="bio"/>

    <LinearLayout
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:layout_below="@+id/bio"

        >
        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/settings_ic"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="Settings"/>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_below="@id/settings"
        >
        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/log_out_ic"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="Log out"/>


    </LinearLayout>
    </RelativeLayout>

</LinearLayout>